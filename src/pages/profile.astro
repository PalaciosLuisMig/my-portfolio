        const url = "/cv/CV-Luis-Miguel-Palacios.pdf";
        var link = document.createElement("a");
        link.href = url;
        link.setAttribute("download", "CV-Luis-Miguel-Palacios.pdf");
        link.click();
    });
    }    
  });
</script>
